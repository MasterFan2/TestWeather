            android:id="@+id/subcomment_good_num_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:textColor="@color/gray_700"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/subcomment_content_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="哈哈只哈哈只wkkw侃侃保侃侃 保佑哈哈中保保保保w中w哈哈哈哈保 保佑哈哈"
        android:textColor="@color/gray_700"
        android:padding="8dp"
        android:layout_toLeftOf="@id/right_layout"
        />
</RelativeLayout>